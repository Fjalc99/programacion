package ejercicio3;

import java.util.Set;

public class CrudAlumno {

	private Alumno a;
	private Set <Alumno> lista;
	
	
	public CrudAlumno(Alumno a, Set<Alumno> lista) {
		super();
		this.a = a;
		this.lista = lista;
	}


	public Alumno getA() {
		return a;
	}


	public void setA(Alumno a) {
		this.a = a;
	}


	public Set<Alumno> getLista() {
		return lista;
	}


	public void setLista(Set<Alumno> lista) {
		this.lista = lista;
	}


	@Override
	public String toString() {
		return "CrudAlumno [a=" + a + ", lista=" + lista + "]";
	}
	public void agregarAlumno () {
		lista.add(a);
		
	}
	
	
	
	public void mostrarAlumnos() {
		for (Alumno a : lista) {
			System.out.println(a);
		}
	}
}
